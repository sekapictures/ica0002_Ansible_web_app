apiVersion: 1

datasources:
  - name: Prometheus
    type: prometheus
    # Access mode - proxy (server in the UI) or direct (browser in the UI).
    access: proxy
    url: http://{{prometheus_host}}:9090/prometheus
    editable: true

  - name: InfluxDB
    type: influxdb
    access: proxy
    database: latency
    url: http://{{influx_host}}:8086

  - name: InfluxDB-Telegraf
    type: influxdb
    access: proxy
    database: telegraf
    url: http://{{influx_host}}:8086
    jsonData:
      httpMode: POST